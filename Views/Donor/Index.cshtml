@model List<BloodLink.Models.Donor>

<div class="container mt-4">

    <!-- HEADER -->
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-danger" fw-bold mb-0" style="line-height: 1;">
                Find Blood Donors
            </h2> 
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Donor" asp-action="Create" class="btn btn-danger">
                <i class="bi bi-plus-circle"></i> Add New Donor
            </a>
        </div>
    </div>

    <!-- SMART SEARCH BAR -->
    <div class="card p-3 bg-light mb-3">
        <form asp-controller="Donor" asp-action="Index" method="get">
            <div class="row">
                <div class="col-md-4">
                    <!-- Dropdown for Blood Group instead of typing -->
                    <select name="searchString" class="form-control">
                        <option value="">All Blood Groups</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-dark w-100">Filter</button>
                </div>
                <div class="col-md-2">
                    <!-- Reset Button -->
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">Reset</a>
                </div>
            </div>
        </form>
    </div>

    <!-- DATA TABLE -->
    <table class="table table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Full Name</th>
                <th>Blood Group</th>
                <th>City</th>
                <th>Phone Number</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var donor in Model)
            {
                <tr>
                    <td>@donor.FullName</td>
                    <td>
                        <span class="badge bg-danger rounded-pill">@donor.BloodGroup</span>
                    </td>
                    <td>@donor.City</td>
                    <td>@donor.PhoneNumber</td>
                    <td>
                        <!-- EDIT BUTTON -->
                        <a asp-action="Edit" asp-route-id="@donor.Id" class="btn btn-sm btn-outline-warning mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <!-- DELETE BUTTON -->
                        <!-- The 'onclick' adds a popup confirmation box -->
                        <a asp-action="Delete" asp-route-id="@donor.Id"
                           class="btn btn-sm btn-outline-danger"
                           onclick="return confirm('Are you sure you want to delete this donor?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Empty State Message -->
    @if (Model.Count == 0)
    {
        <div class="alert alert-warning text-center">
            No donors found. Be the first one to register!
        </div>
    }
</div>