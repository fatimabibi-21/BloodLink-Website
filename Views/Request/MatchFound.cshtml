@model List<BloodLink.Models.Donor>

@{
    ViewData["Title"] = "Match Found";
}

<div class="container mt-5">

    <!-- SUCCESS HEADER -->
    <div class="text-center mb-5">
        <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center shadow mb-3"
             style="width: 80px; height: 80px;">
            <i class="bi bi-check-lg fs-1"></i>
        </div>
        <h2 class="fw-bold text-success">Good News!</h2>
        <p class="lead text-secondary">
            Your request has been posted, and we found
            <span class="fw-bold text-dark">@Model.Count donors</span>
            who match your requirement immediately.
        </p>
    </div>

    <!-- MATCHING DONORS GRID -->
    <div class="row justify-content-center">
        @foreach (var donor in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 h-100" style="background-color: #f0fff4; border-left: 5px solid #198754 !important;">
                    <div class="card-body text-center">

                        <!-- Blood Group Badge -->
                        <div class="mb-3">
                            <span class="badge bg-success rounded-pill fs-4 shadow-sm">
                                @donor.BloodGroup
                            </span>
                        </div>

                        <h4 class="card-title text-dark fw-bold">@donor.FullName</h4>
                        <p class="text-secondary mb-3">
                            <i class="bi bi-geo-alt-fill text-success"></i> @donor.City
                        </p>

                        <hr style="border-top: 1px dashed #b7ebc7;" />

                        <div class="d-grid">
                            <a href="tel:@donor.PhoneNumber" class="btn btn-outline-success fw-bold">
                                <i class="bi bi-telephone-fill"></i> Call: @donor.PhoneNumber
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>

    <!-- BUTTONS TO LEAVE -->
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-dark rounded-pill px-4">
            Go to Request Board
        </a>
    </div>

</div>