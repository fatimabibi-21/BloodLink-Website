@model BloodLink.Models.BloodRequest

@{
    ViewData["Title"] = "Request Blood";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <!-- Dark Card -->
            <!-- removed border-secondary to make it look cleaner -->
            <div class="card shadow-lg border-0" style="background-color: #e0e0e0;">

                <!--  HEADER WITH CUSTOM GRADIENT -->
                <div class="card-header text-white text-center py-3 bg-blood-gradient">
                    <h3 class="mb-0 fw-bold">
                        <i class="bi bi-megaphone-fill me-2"></i> Make a Blood Request
                    </h3>
                </div>

                <div class="card-body p-4">
                    <form method="post">

                        <!-- Priority -->
                        <div class="mb-3">
                            <label class="fw-bold text-dark">Priority Level</label>
                            <select asp-for="Priority" class="form-control form-select">
                                <option value="Normal">Normal (Scheduled Procedure)</option>
                                <option value="Urgent">Urgent (Immediate Need)</option>
                            </select>
                        </div>

                        <!-- Patient Name -->
                        <div class="mb-3">
                            <label class="fw-bold text-dark">Patient Name</label>
                            <input asp-for="PatientName" class="form-control" placeholder="Who needs blood?" />
                            <span asp-validation-for="PatientName" class="text-danger"></span>
                        </div>

                        <!-- Blood Group -->
                        <div class="mb-3">
                            <label class="fw-bold text-dark">Required Blood Group</label>
                            <select asp-for="BloodGroup" class="form-control form-select">
                                <option value="">-- Select Group --</option>
                                <option value="A+">A+</option>
                                <option value="A-">A-</option>
                                <option value="B+">B+</option>
                                <option value="B-">B-</option>
                                <option value="O+">O+</option>
                                <option value="O-">O-</option>
                                <option value="AB+">AB+</option>
                                <option value="AB-">AB-</option>
                            </select>
                            <span asp-validation-for="BloodGroup" class="text-danger"></span>
                        </div>

                        <!-- Hospital Name -->
                        <div class="mb-3">
                            <label class="fw-bold text-dark">Hospital / Location</label>
                            <input asp-for="HospitalName" class="form-control" placeholder="e.g. City Hospital, Ward 4" />
                            <span asp-validation-for="HospitalName" class="text-danger"></span>
                        </div>

                        <!-- Contact Number -->
                        <div class="mb-3">
                            <label class="fw-bold text-dark">Contact Number</label>
                            <input asp-for="ContactNumber" class="form-control" placeholder="0300-XXXXXXX" />
                            <span asp-validation-for="ContactNumber" class="text-danger"></span>
                        </div>

                        <!--  BUTTON WITH MATCHING GRADIENT -->
                        <div class="d-grid gap-2 mt-4">
                            <!-- use the exact same class 'bg-blood-gradient' here -->
                            <button type="submit" class="btn btn-lg text-white shadow bg-blood-gradient button-hover-effect">
                                Post Request
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- IN-PAGE STYLES TO FORCE THE MATCH -->
<style>
    /*
           The Magic Class:
           This defines the Deep Red Gradient used by BOTH the Header and the Button.
    */
    .bg-blood-gradient {
        background: linear-gradient(90deg, #8b0000 0%, #dc3545 100%);
        border: none; /* Removes button border so it looks just like the header */
    }

    /* Small hover effect for the button so it feels interactive */
    .button-hover-effect:hover {
        background: linear-gradient(90deg, #dc3545 0%, #ff4d4d 100%);
        transform: translateY(-2px); /* Moves up slightly */
        transition: all 0.3s;
    }
</style>